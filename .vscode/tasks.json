{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "\"C:/Program Files/CMake/bin/cmake.exe\"",
            "args": [
                "..",
                "-G",
                "Visual Studio 17 2022",
                "-A",
                "x64"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "CMake Build Release",
            "type": "shell",
            "command": "\"C:/Program Files/CMake/bin/cmake.exe\"",
            "args": [
                "--build",
                ".",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": []
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "\"C:/Program Files/CMake/bin/cmake.exe\"",
            "args": [
                "--build",
                ".",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
